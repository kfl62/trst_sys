%>
<div style="width : 400px; height : 260px;">
  <%  if params[:obj_id] == "new"
    @page = TrstSysPage.new
  else
    @page = find_obj(TrstSysPage,params[:obj_id])
  end -%>
  <% remote_form_for :page, @page,
    :url => {:action => 'task', :id => params[:id], :type => 'save', :obj_id => params[:obj_id]} do |f| %>
    <table style="width:80%; margin:auto;">
      <thead>
        <tr>
          <th><%=t 'activerecord.attributes.label_attribute' %></th>
          <th><%=t 'activerecord.attributes.label_value' %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.controller' %> :</td>
          <td><%= f.text_field :controller, :size => 20 %></td>
        </tr>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.chapter' %> :</td>
          <td><%= f.text_field :chapter, :size => 5 %></td>
        </tr>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.page' %> :</td>
          <td><%= f.text_field :page, :size => 5 %></td>
        </tr>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.title' %> :* </td>
          <td>
            <a href="#" onclick="TrstWindow.mce_edit(<%= params[:id] %>,'TrstSysPage' ,<%= params[:obj_id] %>, 'title')">
              <%= truncate(strip_tags(@page.title), :length => 40) %>
            </a>
          </td>
        </tr>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.intro' %> :* </td>
          <td>
            <a href="#" onclick="TrstWindow.mce_edit(<%= params[:id] %>,'TrstSysPage' ,<%= params[:obj_id] %>, 'intro')">
              <%= truncate(strip_tags(@page.intro), :length => 40) %>
            </a>
          </td>
        </tr>
        <tr>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.actions' %> :* </td>
          <td>
            <a href="#" onclick="TrstWindow.mce_edit(<%= params[:id] %>,'TrstSysPage' ,<%= params[:obj_id] %>, 'actions')">
              <%= truncate(strip_tags(@page.actions), :length => 40) %>
            </a>
          </td>
        </tr>
        <tr>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.content' %> :* </td>
          <td>
            <a href="#" onclick="TrstWindow.mce_edit(<%= params[:id] %>,'TrstSysPage' ,<%= params[:obj_id] %>, 'content')">
              <%= truncate(strip_tags(@page.content), :length => 40) %>
            </a>
          </td>
        </tr>
        <tr>
        <tr>
          <td align="left"><%=t 'tasks.db_sys_page.list.note' %> :* </td>
          <td>
            <a href="#" onclick="TrstWindow.mce_edit(<%= params[:id] %>,'TrstSysPage' ,<%= params[:obj_id] %>, 'note')">
              <%= truncate(strip_tags(@page.note), :length => 40) %>
            </a>
          </td>
        </tr>
        <tr>
          <td align="center" colspan="2">
            <br/>
            <input type="hidden"  name="page[updated_by]" value="<%= current_trst_user.id %>" />
            <input type="submit" value="<%=t 'activerecord.attributes.crud.save' %>"/>
            <input type="button" value="<%=t 'activerecord.attributes.crud.cancel' %>" onclick="Lightview.hide()"/>
          </td>
        </tr>
        <tr>
          <td align="left" colspan="2">
            <p>* ptr. a edita c√¢mpul <strong>click</strong> pe link ...</p>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>