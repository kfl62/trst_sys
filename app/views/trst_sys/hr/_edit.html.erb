<div style="width : 380px; height : 240px;">
  <%  if params[:obj_id] == "new"
    obj = TrstHr.new
  else
    obj = find_obj(TrstHr,params[:obj_id])
  end -%>
  <% remote_form_for :hr, obj,
    :url => {:action => 'task', :id => params[:id], :type => 'save', :obj_id => params[:obj_id]} do |f| %>
    <table style="width:80%; margin:auto;">
      <thead>
        <tr>
          <%= f.th_label_tag :id, nil, {:attributes => "label_attribute"} %>
          <%= f.th_label_tag :id, nil, {:attributes => "label_value"} %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%= f.td_label_tag :prefix %>
          <%= f.td_text_field :prefix %>
        </tr>
        <tr>
          <%= f.td_label_tag :lst_name %>
          <%= f.td_text_field :lst_name %>
        </tr>
        <tr>
          <%= f.td_label_tag :frst_name %>
          <%= f.td_text_field :frst_name %>
        </tr>
        <tr>
          <%= f.td_label_tag :mdl_name %>
          <%= f.td_text_field :mdl_name %>
        </tr>
        <tr>
          <%= f.td_label_tag :stts %>
          <%= current_trst_user.id == 1 ? (f.td_text_field :stts) : (f.td_text_field :stts,  :readonly => 'readonly')  %>
        </tr>
        <%= f.hidden_fields :updated_by => current_trst_user.id %>
        <%= f.last_row_for :edit %>
      </tbody>
    </table>
  <% end %>
</div>
