<% obj = trst_find_all(TrstHrPdt) ; i = obj.offset %>
<% if obj.length == 0  %>
  <script type="text/javascript"> alert("<%=  t('activerecord.attributes.no_record') %>")</script>
  <script type="text/javascript"> TrstWindow.edit(<%= params[:id] %>,"new");</script>
<% else %>
<div  style="width:760px;height:480px">
  <table class="full">
    <thead>
      <th>&nbsp;</th>
      <%= th_label_tag obj, :trst_hr_id %>
      <%= th_label_tag obj, :CNP %>
      <%= th_label_tag obj, :BI_sr %>
      <%= th_label_tag obj, :BI__nr %>
      <%= th_label_tag obj, :addr_strt %>
      <%= th_label_tag obj, :addr_city %>
      <%= th_label_tag obj, :addr_state %>
      <%= th_label_tag obj, :tel %>
      <%= th_label_tag obj, :mob %>
      <%= th_label_tag obj, :email %>
      <th>&nbsp;</th>
    </thead>
    <tbody>
      <% for o in obj %>
        <tr class="<%= cycle("even","odd")%>" >
          <td align="right"><%= i += 1 %>.</td>
          <%= td_value_tag o, :trst_hr_id %>
          <%= td_value_tag o, :CNP %>
          <%= td_value_tag o, :BI_sr %>
          <%= td_value_tag o, :BI_nr %>
          <%= td_value_tag o, :addr_strt %>
          <%= td_value_tag o, :addr_city %>
          <%= td_value_tag o, :addr_state %>
          <%= td_value_tag o, :tel %>
          <%= td_value_tag o, :mob %>
          <%= td_value_tag o, :email %>
          <%= link_to_task o, :last_column %>
      <% end %>
      <%= last_row_for obj, :row20, {:colspan => 12, :offset => i } %>
      <%= last_row_for obj, :list, {:colspan => 11 } %>
    </tbody>
  </table>
</div>
<% end %>