<div style="width:460px;height:420px">
  <% o = find_obj(TrstHrPdt,params[:obj_id]) %>
  <table style="width:80%; margin:auto;">
    <thead>
      <tr>
        <%= th_label_tag o, :id, nil, {:attributes => "label_attribute"} %>
        <%= th_label_tag o, :id, nil, {:attributes => "label_value"} %>
      </tr>
    </thead>
    <tbody align="left">
      <tr>
        <%= td_label_tag o, :id %>
        <%= td_value_tag o, :id %>
      </tr>
      <tr>
        <%= td_label_tag o, :hr_name %>
        <%= td_value_tag o, :hr_name %>
      </tr>
      <tr>
        <%= td_label_tag o, :bi_info, nil, {:colspan => '2', :style => 'font-style:italic'} %>
      </tr>
      <tr>
        <%= td_value_tag o, :bi_info, :colspan => '2' %>
      </tr>
      <tr>
        <%= td_label_tag o, :ps_info, nil, {:colspan => '2', :style => 'font-style:italic'} %>
      </tr>
      <tr>
        <%= td_value_tag o, :ps_info, :colspan => '2' %>
      </tr>
      <tr>
        <%= td_label_tag o, :cttn %>
        <%= td_value_tag o, :cttn %>
      </tr>
      <tr>
        <%= td_label_tag o, :adress_info, nil, {:colspan => '2', :style => 'font-style:italic'} %>
      </tr>
      <tr>
        <%= td_value_tag o, :adress_info, :colspan => '2' %>
      </tr>
      <tr>
        <%= td_label_tag o, :contact_info, nil, {:colspan => '2', :style => 'font-style:italic'} %>
      </tr>
      <tr>
        <%= td_value_tag o, :contact_info, :colspan => '2' %>
      </tr>
      <tr>
        <td colspan="2"><hr/></td>
      </tr>
      <%= custom_schema_definitions_html(o) %>
      <%= last_row_for  o, :show %>
    </tbody>
  </table>
</div>
