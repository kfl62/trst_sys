<div style="width : 380px; height : 240px;">
  <%  if params[:obj_id] == "new"
    obj = TrstPrtn.new
  else
    obj = find_obj(TrstPrtn,params[:obj_id])
  end -%>
  <% remote_form_for :prtn, obj,
    :url => {:action => 'task', :id => params[:id], :type => 'save', :obj_id => params[:obj_id]} do |f| %>
    <table style="width:80%; margin:auto;">
      <thead>
        <tr>
          <%= f.th_label_tag :id, nil, {:attributes => "label_attribute"} %>
          <%= f.th_label_tag :id, nil, {:attributes => "label_value"} %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%= f.td_label_tag :full_name, "Prefix / Nume / Sufix", {:colspan => 2} %>
        </tr>
        <tr>
          <td colspan="2">
            <%= f.text_field :prefix, {:size => 2} %>
            <%= f.text_field :name, {:size => 10} %>
            <%= f.text_field :suffix, {:size => 3} %>
          </td>
        </tr>
        <tr>
          <%= f.td_label_tag :contactpers %>
          <%= f.td_text_field :contactpers, {:size => 20 } %>
        </tr>
          <%= f.hidden_fields :updated_by => current_trst_user.id %>
          <%= f.last_row_for :edit %>
      </tbody>
    </table>
  <% end %>
</div>
