<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>
<div style="width:460px;height:350px">
  <% o = find_obj(TrstSysPage,params[:obj_id]) %>
  <table style="width:80%; margin:auto;">
    <thead>
      <tr>
        <th><%=t 'activerecord.attributes.label_attribute' %></th>
        <th><%=t 'activerecord.attributes.label_value' %></th>
      </tr>
    </thead>
    <tbody align="left">
      <tr>
        <td>Id</td>
        <td><%= o.id %></td>
      </tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.controller' %></td>
        <td><%= o.controller %></td>
      </tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.chapter' %></td>
        <td><%= o.chapter %></td>
      </tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.page' %></td>
        <td><%= o.page %></td>
      </tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.title' %></td>
        <td>
          <%= truncate(strip_tags(o.title), :length => 40) %>
        </td>
      </tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.intro' %></td>
        <td>
          <%= truncate(strip_tags(o.intro), :length => 40) %>
        </td>
      </tr>
      <tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.actions' %></td>
        <td>
          <%= truncate(strip_tags(o.actions), :length => 40) %>
        </td>
      </tr>
      <tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.content' %></td>
        <td>
          <%= truncate(strip_tags(o.content), :length => 40) %>
        </td>
      </tr>
      <tr>
        <td align="left"><%=t 'tasks.db_sys_page.list.note' %></td>
        <td>
          <%= truncate(strip_tags(o.note), :length => 40) %>
        </td>
      </tr>
      <%= custom_schema_definitions_html(o) %>
      <tr>
        <td align="center" colspan="2" style="padding-top:10px">
          <%= link_to_function t('tasks.db_sys_page.show.link_to_edit'),
            "TrstWindow.edit(#{params[:id]},#{params[:obj_id]})" %>&nbsp;|&nbsp;
          <%= link_to_function t('tasks.db_sys_page.show.link_to_list'),
            "TrstWindow.exe(#{params[:id]},#{params[:obj_id]})" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
