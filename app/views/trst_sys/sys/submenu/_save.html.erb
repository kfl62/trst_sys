<% if params[:obj_id] == "new"
  params[:submenu][:created_by] = current_trst_user.id
  save_obj(TrstSysSubmenu,params[:obj_id],params[:submenu])
  o = find_obj(TrstSysSubmenu,'last')
  params[:obj_id] = o.id
  obs = t('tasks.db_sys_submenu.save.create')
elsif params[:remove]
  o = find_obj(TrstSysSubmenu,params[:obj_id])
  obs = t('tasks.db_sys_submenu.save.remove', :submenu_name => o.name)
  TrstSysSubmenu.delete(params[:obj_id])
else
  save_obj(TrstSysSubmenu,params[:obj_id],params[:submenu])
  o = find_obj(TrstSysSubmenu,params[:obj_id])
  obs = t('tasks.db_sys_submenu.save.update')
end -%>
<% if params[:remove] %>
  <div align="center" style="width:400px;height:3em">
    <%= obs %>
  </div>
<% else %>
  <div style="width:500px;height:190px">
    <p><%= obs %></p>
    <table style="width:80%; margin:auto;">
      <thead>
        <tr>
          <%= th_label_tag o, :id, nil, {:attributes => "label_attribute"} %>
          <%= th_label_tag o, :id, nil, {:attributes => "label_value"} %>
        </tr>
      </thead>
      <tbody align="left">
        <%= custom_schema_definitions_html(o) %>
        <%= last_row_for o, :save %>
      </tbody>
    </table>
  </div>
<% end %>