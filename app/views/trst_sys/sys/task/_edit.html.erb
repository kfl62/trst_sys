<div style="width : 420px; height : 240px;">
  <%  if params[:obj_id] == "new"
    obj = TrstSysTask.new
  else
    obj = find_obj(TrstSysTask,params[:obj_id])
  end -%>
  <% remote_form_for :task, obj,
    :url => {:action => 'task', :id => params[:id], :type => 'save', :obj_id => params[:obj_id]} do |f| %>
    <table style="width:80%; margin:auto;">
      <thead>
        <tr>
          <%= f.th_label_tag :id, nil, {:attributes => "label_attribute"} %>
          <%= f.th_label_tag :id, nil, {:attributes => "label_value"} %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%= f.td_label_tag  :trst_sys_page_id %>
          <%= f.td_text_field :trst_sys_page_id, :size => 5 %>
        </tr>
        <tr>
          <%= f.td_label_tag  :prefix %>
          <%= current_trst_user.id == 1 ? (f.td_text_field :prefix)  : (f.td_text_field :prefix, :readonly => 'readonly') %>
        </tr>
        <tr>
          <%= f.td_label_tag  :exe_id %>
          <%= current_trst_user.id == 1 ? (f.td_text_field :exe_id) : (f.td_text_field :exe_id, :readonly => 'readonly') %>
        </tr>
        <tr>
          <%= f.td_label_tag  :exe_params %>
         <%= current_trst_user.id == 1 ? (f.td_text_field :exe_params) : (f.td_text_field :exe_params, :readonly => 'readonly') %>
        </tr>
        <tr>
          <%= f.td_label_tag  :name %>
          <%= f.td_text_field :name %>
        </tr>
        <tr>
          <%= f.td_label_tag  :title %>
          <%= f.td_text_field :title %>
        </tr>
        <tr>
          <%= f.td_label_tag  :info %>
          <td>
            <a href="#" onclick="TrstWindow.mce_edit(<%= params[:id] %>,'TrstSysTask' ,<%= params[:obj_id] %>, 'info')">
              <%= truncate(strip_tags(obj.info), :length => 40) %>
            </a>
          </td>
        </tr>
        <%= f.hidden_fields :updated_by => current_trst_user.id %>
        <%= f.last_row_for :edit %>
        <tr>
          <td align="left" colspan="2">
            <p>* ptr. a edita c√¢mpul <strong>click</strong> pe link ...</p>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
